<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login">


    <ImageView
        android:id="@+id/coidingimg"
        android:layout_width="80dp"
        android:layout_height="240dp"
        android:src="@drawable/codingbg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:id="@+id/login"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coidingimg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Login"
        android:textColor="#006de3"
        android:textSize="45dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColorHint="#3EB8D4"
        android:inputType="text"
        android:layout_above="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/questionlayout_bg"
        android:hint="Username"
        android:textColor="#3EB8D4"
        android:textSize="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="30dp"
        android:textCursorDrawable="@drawable/color_cursor" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:textColorHint="#3EB8D4"
        android:layout_above="@+id/wlogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/questionlayout_bg"
        android:hint="Password"
        android:textColor="#3EB8D4"
        android:textSize="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="30dp"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <Button
        android:id="@+id/wlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"

        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/lSignup"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bluelayout_bg"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign Up"
        android:textColor="#006de3"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/lSignup"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="30dp"/>

</RelativeLayout>